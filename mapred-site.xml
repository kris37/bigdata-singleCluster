<!-- Put site-specific property overrides in this file. -->

<configuration>
	<property>
        <name>mapreduce.framework.name</name>
        <value>yarn</value>
    </property>

    <property>
        <name>mapreduce.map.output.compress</name>
        <value>true</value>
    </property>
    <property>
        <name>mapred.map.output.compress.codec</name>
        <value>org.apache.hadoop.io.compress.SnappyCodec</value>
    </property>

     <!-- map占的资源-->
    <property>
        <name>mapreduce.map.memory.mb</name>
        <value>100</value>
    </property>

    <property>
        <name>mapreduce.map.cpu.vcores</name>
        <value>1</value>
    </property>

    <!-- reduce占的资源-->
    <property>
        <name>mapreduce.reduce.memory.mb</name>
        <value>100</value>
    </property>

    <property>
        <name>mapreduce.reduce.cpu.vcores</name>
        <value>1</value>
    </property>

    <property>
        <name>gc.path</name>
        <value>${hadoop.tmp.dir}</value>
    </property>

     <!--启动jvm的参数-->
    <property>
        <name>mapred.child.java.opts</name>
        <value>-Xmx200m -verbose:gc -Xloggc:${gc.path}/mr-%t.gc</value>
    </property>
     <!-- am的内存,默认为6G -->
    <property>
        <name>yarn.app.mapreduce.am.resource.mb</name>
        <value>128</value>
    </property>
    <!-- 启动am进程的内存为5G -->
    <property>
        <name>yarn.app.mapreduce.am.command-opts</name>
        <value>-Xmx128m -verbose:gc -Xloggc:${gc.path}/am-%t.gc</value>
    </property>
    <property>
        <name>yarn.app.mapreduce.am.resource.cpu-vcores</name>
        <value>1</value>
    </property>


    <!--map/reduce的中间结果保存路径-->
    <property>
        <name>mapreduce.cluster.local.dir</name>
        <value>
            /hdd1/yarn/mapred/local/
        </value>
    </property>


    <property>
        <name>mapreduce.job.queuename</name>
        <value>default</value>
    </property>

    <property>
        <name>mapreduce.job.maps</name>
        <value>1</value>
    </property>
    <property>
        <name>mapreduce.job.reduce</name>
        <value>1</value>
    </property>


    <property>
        <name>mapreduce.jobhistory.address </name>
        <value>192.168.65.2:10020</value>
    </property>

    <property>
        <name>mapreduce.jobhistory.webapp.address</name>
        <value>192.168.65.2:19888</value>
    </property>
    <property>
        <name>mapred.child.env</name>
        <value>LD_LIBRARY_PATH=/opt/hadoop/lib/native</value>
    </property>

</configuration>
